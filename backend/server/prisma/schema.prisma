generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Estudiante {
  id     Int     @id @default(autoincrement())
  nombre String
  codigo String  @unique
  activo Boolean @default(true)
  viajes Viaje[]
}

model Bus {
  id                  Int      @id @default(autoincrement())
  placa               String   @unique
  routeId             String?  // Route identifier for room segmentation
  lat                 Float
  lng                 Float
  ultimaActualizacion DateTime @default(now())
  viajes              Viaje[]
  logsIngreso         LogsIngreso[]
}

model Parada {
  id     Int    @id @default(autoincrement())
  nombre String
  lat    Float
  lng    Float
}

model LogsIngreso {
  id           Int      @id @default(autoincrement())
  estudianteId Int?     // Optional connection to registered student
  busId        Int
  bus          Bus      @relation(fields: [busId], references: [id])
  codigo       String   // Code sent in the request
  fecha        DateTime @default(now())
  exitoso      Boolean
  mensaje      String
}

model Viaje {
  id           Int        @id @default(autoincrement())
  estudiante   Estudiante @relation(fields: [estudianteId], references: [id])
  estudianteId Int
  bus          Bus        @relation(fields: [busId], references: [id])
  busId        Int
  fecha        DateTime   @default(now())
}
